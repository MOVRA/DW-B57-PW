{{>header}}
<main>
    <div class="custom-container-landing container-fluid d-flex flex-column flex-lg-row justify-content-lg-around px-2 py-2 align-items-center gap-lg-4 gap-2 justify-content-center"
        style="height: 80vh; margin-bottom: 15vw;">
        <div class="d-flex flex-column align-items-lg-start gap-4 align-items-center">
            <h1 class="text-white text-center fs-1">Hello World! &#128075;</h1>
            <h2 class="text-white fs-2 text-center">Welcome to my <span style="color: lightblue;">portfolio</span>
                <span style="color: coral;">websites</span>
            </h2>
            <p class="text-white fs-6 text-center">This website contains information about myself, the services I
                provide and the abilities I have</p>
            <div class="d-flex rounded-4 align-items-center justify-content-center p-3"
                style="height: 4rem; width: fit-content; border: 3px solid rgba(43, 43, 201, 0.635);">
                <h6 class="text-white d-flex gap-2" style="font-size: 1rem;">Project i've done<a href="#project"
                        class="fs-6">Check!</a></h6>
            </div>
        </div>
        <div class="card bg-transparent d-none d-lg-block"
            style="width: 18rem; height: 23rem; border:5px solid rgba(43, 43, 201, 0.635); border-radius: 5vw;">
            <img src="./images/pexels-stefanstefancik-91227.jpg" class="card-img-top" alt="..."
                style="height: 18rem; object-fit: cover; border-radius: 5vw;">
            <div class="card-body">
                <p class="card-text text-white fs-5 text-center">M GIBRAN M</p>
            </div>
        </div>
    </div>
    <h1 class="text-center mt-5 mb-lg-0 mb-5 fs-3 text-white w-100 pt-5">More information</h1>
    <div
        class="custom-container-cta container-fluid d-flex justify-content-lg-around mt-3 p-lg-5 flex-column flex-lg-row align-items-lg-center align-items-center gap-5">
        <div class="card bg-transparent custom-card-cta">
            <div class="card-body d-flex flex-column justify-content-around justify-content-lg-between">
                <h5 class="card-title text-white fs-4">Checkout the people that have used my service!</h5>
                <p class="card-text text-white fs-6 mt-3">I have served many people in creating websites and
                    designing websites feel free to check!</p>
                <a href="#"
                    class="btn btn-primary mt-3 custom-cta-btn w-50 d-flex align-items-center justify-content-center">Testimoni</a>
            </div>
        </div>
        <div class="card bg-transparent custom-card-cta">
            <div class="card-body d-flex flex-column justify-content-around justify-content-lg-between">
                <h5 class="card-title text-white fs-4">Contact me if you have a need to use my service!</h5>
                <p class="card-text text-white fs-6 mt-3">Contact me if you would like to know more about the
                    services i provide.</p>
                <a href="#"
                    class="btn btn-primary mt-3 custom-cta-btn w-50 d-flex align-items-center justify-content-center">Contact</a>
            </div>
        </div>
    </div>
    <h1 class="text-center mt-lg-0 mt-5 mb-5 fs-3 text-white w-100 pt-lg-0 pt-5" id="project">My Project</h1>
    <div class="post-project-container-none">
        <form action="/add-project" method="post" class="form-none w-75">
            <input class="form-control bg-light border-0 mb-3 " type="text" name="username" id="userame"
                value="{{user.username}}" hidden>
            <label for="file" class="fs-5 text-white mb-3">Image</label>
            <input class="form-control bg-light border-0 mb-3 " type="file" name="file" id="file">
            <label for="pname" class="fs-5 text-white mb-3">Project name</label>
            <input class="form-control bg-light border-0 mb-3 " type="text" name="pname" id="pname" required>
            <label for="sDate" class="fs-5 text-white mb-3">Start date</label>
            <input class="form-control bg-light border-0 mb-3 " type="date" name="sDate" id="sDate" required>
            <label for="eDate" class="fs-5 text-white mb-3">End date</label>
            <input class="form-control bg-light border-0 mb-3 " type="date" name="eDate" id="eDate" required>
            <label for="" class="fs-5 text-white mb-3">Technologies</label>
            <div class="checkBox">
                <input class=" bg-light border-0 mx-1" type="checkbox" name="stack" id="tech" value="Node JS">
                <label for="tech" class="fs-6  text-white mb-3">Node JS</label>
                <input class=" bg-light border-0 mx-1" type="checkbox" name="stack" id="tech" value="Next JS">
                <label for="tech" class="fs-6  text-white mb-3">Next JS</label>
                <input class=" bg-light border-0 mx-1" type="checkbox" name="stack" id="tech" value="React JS">
                <label for="tech" class="fs-6  text-white mb-3">React JS</label>
                <input class=" bg-light border-0 mx-1" type="checkbox" name="stack" id="tech" value="Typescript">
                <label for="tech" class="fs-6  text-white mb-3">Typescript</label>
                <input class=" bg-light border-0 mx-1" type="checkbox" name="stack" id="tech" value="others">
                <label for="tech" class="fs-6  text-white mb-3">Others</label>
            </div>
            <label for="desc" class="fs-5 text-white mb-3">Description</label>
            <textarea id="message" class="form-control border-0 mb-3" name="desc" cols="48" rows="10"
                placeholder="Enter description..." required></textarea>
            <button type="submit" class="btn btn-primary submitBtn">Post</button>
        </form>
    </div>
    <div
        class="custom-container-project container-fluid p-lg-5 py-lg-5 py-3 flex-wrap justify-content-lg-start justify-content-center">
        {{#if user}}
        {{#each data}}
        <div class="card bg-transparent shadow-lg card-custom-project">
            {{#if_eq ../user.id user_id}}
            <div style="display: flex; justify-content: space-between; align-items: center">
                <p style="font-size: 1vw;" class="text-white">{{username}}</p>
                <button class="more-btn"><ion-icon name="ellipsis-horizontal-outline"
                        style="color: white; height: 1.5vw; width: 1.5vw"></ion-icon></button>
            </div>
            <div class="more-menu-na">
                <a href="/project-detail/{{../user.id}}" class="">Edit</a>
                <a href="/project-detail/{{../user.id}}" class="">Delete</a>
            </div>
            {{else}}
            <div style="display: flex; justify-content: space-between; align-items: center">
                <p style="font-size: 1vw;" class="text-white">{{username}}</p>
                <button class="more-btn"><ion-icon name="ellipsis-horizontal-outline"
                        style="color: white; height: 1.5vw; width: 1.5vw"></ion-icon></button>
            </div>
            <div class="more-menu-na">
                <a href="/project-detail/{{user_id}}" class="text-white">View Post</a>
            </div>
            {{/if_eq}}
            <img src={{image}} class="card-img-top img-custom-project" alt="..." style="object-fit: cover;">
            <div class="card-body  d-flex flex-column justify-content-between">
                <div>
                    <h5 class="card-title text-white">{{ name }}</h5>
                </div>
                <p class="card-text text-white">{{ description }}</p>
                <div class="btn-edit-delete" style="display: flex; height: fit-content; flex-direction: column;">
                    <p class="card-text text-white" style="margin-right: 2vw;">Duration : {{ duration }} </p>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        {{#each data}}
        <div class="card bg-transparent shadow-lg card-custom-project">
            <div style="display: flex; justify-content: space-between; align-items: center">
                <p style="font-size: 1vw;" class="text-white">{{username}}</p>
                <button class="more-btn"><ion-icon name="ellipsis-horizontal-outline"
                        style="color: white; height: 1.5vw; width: 1.5vw"></ion-icon></button>
            </div>
            <div class="more-menu-na">
                <a href="/login" class="">Log-in</a>
            </div>
            <img src={{image}} class="card-img-top img-custom-project" alt="..." style="object-fit: cover;">
            <div class="card-body  d-flex flex-column justify-content-between">
                <div>
                    <h5 class="card-title text-white">{{ name }}</h5>
                </div>
                <p class="card-text text-white">{{ description }}</p>
                <div class="btn-edit-delete" style="display: flex; height: fit-content; flex-direction: column;">
                    <p class="card-text text-white" style="margin-right: 2vw;">Duration : {{ duration }} </p>
                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>

</main>
{{>footer}}