{{>header}}

<main class="d-flex justify-content-center vh-100" id="send">
    <form action="/login" method="POST"
        class="w-50 mb-5 mt-3 gap-3 d-flex flex-column align-items-center justify-content-center">
        <div class="form-outline mb-4 w-75 d-flex align-items-center flex-column">
            <label class="form-label text-white fs-2 " for="email">Email</label>
            <input type="email" id="email" class="form-control" name="email" />
        </div>
        <div class="form-outline mb-4 w-75 d-flex align-items-center flex-column">
            <label class="form-label text-white fs-2 " for="password">Password</label>
            <input type="password" id="password" class="form-control" name="password"/>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4 text-white fs-5">Send</button>
    </form>
</main>

{{>footer}}